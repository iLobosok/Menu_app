<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_element"
    tools:context=".MainActivity"
    android:background="#E0EBF4">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/animation_view"
        app:lottie_rawRes="@raw/register"
        android:layout_marginTop="50dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/tauri"
        android:gravity="center |top"
        android:text="NIOWO"
        android:textColor="#35383A"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="621dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:orientation="vertical">


    </LinearLayout>
    <TextView
        android:id="@+id/text_botton"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:text="Welcome to the new step of future"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_above="@+id/text_botton"
        android:layout_margin="25dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnSingIn"
            android:background="@drawable/category_custumize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:textColor="#fff"
            android:text="Sign In" />

        <Button
            android:background="@drawable/category_custumize"
            android:id="@+id/btnRegister"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:text="Register" />
    </LinearLayout>


</RelativeLayout  >